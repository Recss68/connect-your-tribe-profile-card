{% render 'partials/head.liquid' %}

  <article class="card">
    <section class="banner">
      <h2>RECSS</h2>
    </section>
    <figure class="profile-img">
      <img src="/assets/test.jpg" alt="Profiel">
    </figure>
    <section class="content">
      <header>
        <h1 class="name">{{ person.name }}</h1>
        <p class="role">{{ person.custom.leeftijd }}</p>
        <p class="role">{{ person.custom.functie }}</p>
      </header>
      <p class="bio">{{ person.bio }}</p>
      <footer><a href="{{person.website}}">{{ person.website }}</a></footer>
    </section>
    <nav>
